<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="@dimen/_0dp" android:bottom="@dimen/_12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/_125dp"
                android:height="@dimen/_20dp"/>
            <corners android:radius="@dimen/_5dp" />
        </shape>
    </item>

    <item android:bottom="@dimen/_0dp"
        android:top="@dimen/_0dp"
        android:gravity="center_horizontal|bottom">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <size
                    android:height="@dimen/_10dp"
                    android:width="@dimen/_10dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>